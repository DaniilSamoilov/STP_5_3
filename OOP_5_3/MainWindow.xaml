<Window x:Class="OOP_5_3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OOP_5_3"
        mc:Ignorable="d"
        Title="Магазин" Height="450" Width="800">
    <Grid Margin="0,10,0,0">
        <Grid x:Name="my_grid" Margin="10,10,55,0">
            <ScrollViewer x:Name="viewer" Height="414" VerticalAlignment="Center">
                <WrapPanel x:Name="products_panel"/>
            </ScrollViewer>
        </Grid>
        <Image x:Name="cart_btn" HorizontalAlignment="Left" Height="40" Margin="750,10,0,0" VerticalAlignment="Top" Width="40" MouseDown="cart_btn_Click" Source="/shoping_cart.png"/>
        <Label x:Name="totalSum" Content="" HorizontalAlignment="Left" Margin="750,43,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
